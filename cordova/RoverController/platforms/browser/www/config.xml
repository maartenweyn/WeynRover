<?xml version='1.0' encoding='utf-8'?>
<widget id="be.wesdec.rovercontroller" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RoverController</name>
    <description>
        An communication app for a Rover
    </description>
    <author email="maarten@wesdec.be" href="http://www.uantwerpen.be">
        Maarten Weyn
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
